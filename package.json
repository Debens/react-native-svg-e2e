{
  "name": "ReactNativeSvgE2E",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "npm run test:e2e:build:ios:release && npm run test:e2e:ios:release",
    "test:e2e:ios": "detox test -c ios.sim.debug",
    "test:e2e:ios:release": "detox test -c ios.sim.release --cleanup",
    "test:e2e:build:ios": "detox build -c ios.sim.debug",
    "test:e2e:build:ios:release": "detox build -c ios.sim.release",
    "test:e2e:android": "detox test -c android.emu.debug",
    "test:e2e:build:android": "detox build -c android.emu.debug",
    "screenshots:ios": "detox test -c ios.sim.debug --take-screenshots all",
    "screenshots:android": "detox test -c android.emu.debug --take-screenshots all"
  },
  "dependencies": {
    "react": "16.6.3",
    "react-native": "0.58.6",
    "react-native-svg": "^9.2.4"
  },
  "devDependencies": {
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "24.1.0",
    "detox": "^10.0.10",
    "jest": "^24.1.0",
    "metro-react-native-babel-preset": "0.53.0",
    "react-test-renderer": "16.6.3"
  },
  "jest": {
    "preset": "react-native"
  },
  "detox": {
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/ReactNativeSvgE2E.app",
        "build": "xcodebuild -project ios/ReactNativeSvgE2E.xcodeproj -scheme ReactNativeSvgE2E -configuration Debug -destination 'platform=iOS Simulator,name=iPhone XR' -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone XÊ€"
      },
      "ios.sim.release": {
        "binaryPath": "ios/build/Build/Products/Release-iphonesimulator/ReactNativeSvgE2E.app",
        "build": "xcodebuild -project ios/ReactNativeSvgE2E.xcodeproj -scheme ReactNativeSvgE2E -configuration Release -destination 'platform=iOS Simulator,name=iPhone 7' -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone 7"
      },
      "android.emu.debug": {
        "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk",
        "build": "cd android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug && cd ..",
        "type": "android.emulator",
        "name": "Nexus_5X_API_28_x86"
      }
    },
    "test-runner": "jest"
  }
}
